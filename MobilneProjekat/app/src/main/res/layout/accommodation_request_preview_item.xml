<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewAccommodationRequestPreview"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:id="@+id/linearLayoutAccommodationRequestHostView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/txtNameAccommodationItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_columnWeight="1"
            android:text="Ime akomodacije"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/txtAddressAccommodationItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_columnWeight="1"
            android:text="adresa akomodacije"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <TextView
                android:id="@+id/txtTypeOfRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"

                android:text="request type"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/txtRequestStatus"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:text="request status"
                android:textSize="19sp"
                android:paddingStart="10dp" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtRejectReason"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason:"/>


        <TextView
            android:id="@+id/txtExistingNameAccommodationItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_columnWeight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtExistingAddressAccommodationItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_columnWeight="1"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>



