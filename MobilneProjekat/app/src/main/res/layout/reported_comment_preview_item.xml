<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recCardReportedCommentPreview"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:id="@+id/linearLayoutReportedCommentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/txtReportType"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_columnWeight="1"
            android:text="Type of report"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/txtOwnerNameSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Owner name surname"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txtOwnerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Owner email"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtReportStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="Status"
            android:textSize="17sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>



